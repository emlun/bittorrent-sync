pkgname=btsync-autoconfig
pkgver=2.0.0
pkgrel=1
pkgdesc="Create default config files when users launch btsync, if necessary"
arch=('any')
url='https://github.com/emlun/btsync-autoconfig'
license=('GPL')
depends=('btsync')
makedepends=('git')
install="${pkgname}.install"
source=("${install}"
        "git+${url}.git#tag=${pkgver}")
md5sums=('b7ee5f7a63e271594b34d9137f7fb1c3'
         'SKIP')
sha256sums=('86b498824f9a69568d6b4b3de8f7b614ca311532d90fdab3ddd42eda36286ca7'
            'SKIP')

package() {
    cd "${pkgname}"
    make install DESTDIR="${pkgdir}" PKGNAME="${pkgname}"
}
