pkgname=btsync-autoconfig
pkgver=1.4.0
pkgrel=1
pkgdesc="Create default config files when users launch btsync, if necessary"
arch=('any')
url='https://github.com/emlun/btsync-autoconfig'
license=('GPL')
depends=('btsync')
makedepends=('git')
install="${pkgname}.install"
source=("${install}"
        "git+${url}.git#tag=${pkgver}")
md5sums=('eabf48a1092829ea7b8d4e8d99e6d8f7'
         'SKIP')
sha256sums=('7423d2a0e8bdc55a5f026dbae2cdd8a5da21797eab7e4aff266ab82416ccf679'
            'SKIP')

package() {
    cd "${pkgname}"
    make install DESTDIR="${pkgdir}" PKGNAME="${pkgname}"
}
