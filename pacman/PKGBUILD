pkgname=btsync-autoconfig
pkgver=1.2.0
pkgrel=2
pkgdesc="Create default config files when launching btsync@user, if necessary"
arch=('any')
url='https://github.com/emlun/btsync-autoconfig'
license=('GPL')
depends=('btsync')
makedepends=('git')
install="${pkgname}.install"
source=("${install}"
        "git+${url}.git#tag=${pkgver}")
md5sums=('0b37e3a632c36b57c618e3e57c87f02e'
         'SKIP')
sha256sums=('6d6e5bd0f4de8710f98184e93b41207d440f16859a96e16af5774729f6da4269'
            'SKIP')

package() {
    cd "${pkgname}"
    make install DESTDIR="${pkgdir}" PKGNAME="${pkgname}"
}
